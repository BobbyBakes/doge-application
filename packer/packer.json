{
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "us-east-1",
            "source_ami": "ami-f4cc1de2",
            "instance_type": "t2.micro",
            "ssh_username": "ubuntu",
            "ami_name": "doge-application {{timestamp}}"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo apt-get update",
                "sudo apt-get install -y ruby openjdk-8-jdk"
            ]
        },
        {
            "type": "file",
            "source": "./tests",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "script": "scripts/serverspec.sh"
        }
    ],
    "post-processors": [
        {
            "type": "manifest",
            "output": "manifest.json"
        }
    ]
}
